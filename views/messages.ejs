<!DOCTYPE html>
<html lang="he" dir="rtl">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- head partial will inject the <title> -->
        <%- include('partials/head', { title: 'הודעות' }) %>
        <!-- your styles -->
        <link rel="stylesheet" href="/style.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>

    <body>
        <!-- fixed navbar -->
        <%- include('partials/navbar') %>

        <!-- decorative “sea-tone” banner -->
        <div class="page-banner"></div>

        <div class="container mt-3 pt-3">
            <!-- message input -->
            <div class="mb-4">
                <input type="text" id="input" class="form-control mb-2" placeholder="כתוב/כתבי הודעה..." />
                <button class="btn btn-primary w-100" onclick="submitMessage()">
                    שלח/י
                </button>
            </div>

            <!-- injected messages -->
            <div class="to-do-items list-group animate__animated" id="messageList"></div>
        </div>

        <!-- scripts -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/script.js"></script>
    </body>

</html>