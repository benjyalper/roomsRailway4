<!DOCTYPE html>
<html lang="he" dir="rtl">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>טבלת חדרים</title>
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </head>

    <body>
        <%- include('partials/head',   { title: 'טבלת חדרים' }) %>
        <%- include('partials/navbar') %>
        <div style="height:56px;"><!-- spacer for fixed navbar --></div>

        <div class="container mt-5 pt-3">
            <h1 class="text-center mb-4">טבלת חדרים</h1>
            <div class="mb-3">
                <input type="date" id="lookupDate" class="form-control" />
            </div>
            <div class="schedule-wrapper">
                <table id="scheduleTable">
                    <thead>
                        <tr>
                            <th class="time-col"></th>
                            <% rooms.forEach(label => { %>
                            <th class="room-col">חדר <%= label %></th>
                            <% }) %>
                        </tr>
                    </thead>
                    <tbody>
                        <% TIMES.forEach(time => { %>
                        <tr>
                            <th class="time-col"><%= time %></th>
                            <% rooms.forEach(label => { %>
                            <td class="grid-cell" data-room-hour="<%= label %> <%= time %>:00"></td>
                            <% }) %>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
        <script src="/script.js"></script>
    </body>

</html>